
// Create new array and map the first letter of every word into the new array (secretMessage).
const animals = ['Hen', 'elephant', 'llama', 'leopard', 'ostrich', 'Whale', 'octopus', 'rabbit', 'lion', 'dog'];
const secretMessage = animals.map(animal => {
  return animal[0]
});

console.log(secretMessage.join(''));

// Create new array called smallNumbers. Take bignumbers the list and iterates through, dividing by 100 everytime 
const bigNumbers = [100, 200, 300, 400, 500];
const smallNumbers = bigNumbers.map(number => {
  return number/100;
})

